@model GreenToys.ViewModel.UserViewModel

@{
    ViewBag.Title = "Details";
}


<div>
    <h3>User Details</h3>
    <hr />
    <div class="form-border">
        <fieldset disabled>

            <div class="row" style="padding-bottom:5px; padding-top:5px;">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.FirstName, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                </div>
            </div>

            <div class="row" style="padding-bottom:5px; padding-top:5px;">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.LastName, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                </div>
            </div>

            <div class="row" style="padding-bottom:5px; padding-top:5px;">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.Phone, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                </div>
            </div>

            <div class="row" style="padding-bottom:5px; padding-top:5px;">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.BirthDate, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.BirthDate, "{0: MM dd yyyy}", new { @class = "form-control" })
                </div>
            </div>

            <div class="row" style="padding-bottom:5px; padding-top:5px;">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>


        </fieldset>
    </div>
</div>
<br />

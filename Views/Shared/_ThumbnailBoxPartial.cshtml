@model GreenToys.ViewModel.ThumbnailBoxViewModel

<div class="row">
    @if (Model.Thumbnails != null)
    {
        foreach (var thumbnail in Model.Thumbnails)
        {
            <div class="col-xs-6 col-md-3">
                <div class="thumbnail">
                    <div class="thumbnail-container">
                        <div class="thumbnail-img-container">
                            <a href="@thumbnail.Link"><img class="thumbnail-img" src="@thumbnail.ImageUrl" alt="" /></a>
                        </div>
                    </div>
                    <div class="caption">
                        <h3><a href="@thumbnail.Link">@thumbnail.ToyName</a></h3> 
                        <h5><a>@thumbnail.TypeOfToy.Name</a></h5>  
                        @*<p>@Html.Raw(thumbnail.TypeOfToy.Name)</p>*@              
                        <p>@Html.Raw(thumbnail.ToyDescription)</p>
                    </div>
                </div>
                <br/>
                <br />
            </div>
        }
    }

</div>
@*style="width:200px; height:180px; padding-left:50px;padding-right:5px;"*@
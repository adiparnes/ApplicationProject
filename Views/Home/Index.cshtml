@model IEnumerable<GreenToys.ViewModel.ThumbnailBoxViewModel>
@{
    ViewBag.Title = "Home Page";
}
@* FormMethod.Get: pushing the values to go to the get method in the home controller and not to the post*@
@using (Html.BeginForm("Index", "Home", FormMethod.Get))
{
    <div class="row">
        <br />
        <div class="pull-right" style="padding-right:15px;">
            <button type="submit" value="Search" class="btn btn-sm btn-primary">
                <span class="glyphicon glyphicon-search"></span>&nbsp;Search
            </button>
        </div>

        <div class="pull-right">
            @Html.Editor("search", new { htmlAttributes = new { @class = "form-control input-sm" } })
        </div>
    </div>
    <br />
}

<div class="row">
    @foreach (var box in Model)
    {
        @Html.Partial("_ThumbnailBoxPartial", box);
    }
</div>

